<p id="notice"><%= notice %></p>

<h1>Schedule</h1>

<div class="table-responsive">
	<table class="table table-striped">
	<thead>
		<tr>
			<th>Game Time</th>
			<th>Home Team</th>
			<th>Away Team</th>
			<th colspan="3"></th>
		</tr>
	</thead>

  	<tbody>
		<% @schedules.each do |schedule| %>
			<tr>
				<td><%= schedule.gametime %></td>
				<td><%= schedule.hteam %></td>
				<td><%= schedule.ateam %></td>
				<td><%= link_to 'Show', schedule %></td>
				<td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
				<td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
  	</tbody>
	</table>
</div>

<br>

